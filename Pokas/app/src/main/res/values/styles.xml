<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

     <style name="FabMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name = "android:layout_marginBottom">11dp</item>
        <item name = "android:layout_marginRight">11dp</item>
        <item name = "android:layout_marginLeft">11dp</item>
        <item name="fab:menu_backgroundColor">@android:color/transparent</item>
        <item name="fab:menu_buttonSpacing">0dp</item>>
        <item name="fab:menu_colorNormal">#00ffdd</item>
        <item name="fab:menu_colorPressed">#0099dd</item>
        <item name="fab:menu_colorRipple">#99d4d4d4</item>
        <item name="fab:menu_fab_size">normal</item>
        <item name="fab:menu_labels_colorNormal">#666</item>
        <item name="fab:menu_labels_colorPressed">#444"</item>
        <item name="fab:menu_labels_colorRipple">#66efecec</item>
        <item name="fab:menu_labels_cornerRadius">3dp</item>
        <item name="fab:menu_labels_ellipsize">none</item>
        <item name="fab:menu_labels_hideAnimation">@anim/fab_slide_out_to_right</item>
        <item name ="fab:menu_labels_margin">0dp</item>
        <item name="fab:menu_labels_maxLines">-1</item>
        <item name="fab:menu_labels_padding">5dp</item>
        <item name="fab:menu_labels_position">left</item>
        <item name="fab:menu_labels_showAnimation">@anim/fab_slide_in_from_right</item>
        <item name="fab:menu_labels_showShadow">true</item>
        <item name="fab:menu_labels_singleLine">false</item>
        <item name="fab:menu_labels_textColor">#f2f1f1</item>
        <item name="fab:menu_labels_textSize">12sp</item>
        <item name="fab:menu_openDirection">up</item>
        <item name="fab:menu_shadowRadius">4dp</item>
        <item name="fab:menu_shadowXOffset">1dp</item>
        <item name="fab:menu_shadowYOffset">4dp</item>
        <item name="fab:menu_showShadow">true</item>
    </style>

    <style name="FabButtonStyle">
        <item name="fab:fab_size">mini</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
